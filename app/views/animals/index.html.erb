<div class="container">
  <h1> View all the animals here</h1>

  <div class="cards" data-controller="i-naturalist-api">
    <% @animals.each do |animal| %>
      <div class="card-horizontal">
        <%= image_tag animal.photo, class: "card-horizontal img" %>
        <div class="card-horizontal-infos">
          <h2><%= animal.name %></h2>
          <p><%= animal.details%></p>
        </div>
        <%= link_to "See details", animal_path(animal), :class => "btn btn-highlight text-center mt-3" %>
      </div>
    <% end %>
  </div>

  <div>
  <%= link_to "Look for another animal", root_path, class: "btn btn-ghost" %>
  </div>

</div>
