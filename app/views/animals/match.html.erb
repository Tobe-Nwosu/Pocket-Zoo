<h1 class="text-center">Search for your animal!</h1>

<form action="#">
  <fieldset>
    <legend class="text-center">What is it like?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="mammal" name="classification" autocomplete="off" />
          <label for="mammal">Furry</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="reptile" name="classification" autocomplete="off" />
          <label for="reptile">Scaly</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="bird" name="classification" autocomplete="off" />
          <label for="bird">Feathery</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="insect" name="classification" autocomplete="off" />
          <label for="insect">Creepy-crawly</label>
        </div>
      </div>

  </fieldset>

  <fieldset>
    <legend class="text-center">Where does it live?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="trees" name="habitat" autocomplete="off" />
          <label for="trees">In the trees</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="beach" name="habitat" autocomplete="off" />
          <label for="beach">By the seaside</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="water" name="habitat" autocomplete="off" />
          <label for="water">In the water</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="air" name="habitat" autocomplete="off" />
          <label for="air">In the sky</label>
        </div>
      </div>

  </fieldset>

  <fieldset>
    <legend class="text-center">What does it have?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="wings" name="features" autocomplete="off" />
          <label for="wings">Wings</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="hooves" name="features" autocomplete="off" />
          <label for="hooves">Hooves</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="claws" name="features" autocomplete="off" />
          <label for="claws">Claws</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="None" name="features" autocomplete="off" />
          <label for="None">None</label>
        </div>
      </div>
  </fieldset>
  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
