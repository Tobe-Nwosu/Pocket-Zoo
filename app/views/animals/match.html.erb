<h1 class="text-center">Search for your animal!</h1>

<form action="/animals">
  <fieldset>
    <legend class="text-center">What is it like?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="mammal" value="mammal" name="animal[classification]" autocomplete="off" />
          <label for="mammal">Furry</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="reptile" value="reptile" name="animal[classification]" autocomplete="off" />
          <label for="reptile">Scaly</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="bird" value="bird" name="animal[classification]" autocomplete="off" />
          <label for="bird">Feathery</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="insect" value="insect" name="animal[classification]" autocomplete="off" />
          <label for="insect">Creepy-crawly</label>
        </div>
      </div>

  </fieldset>

  <fieldset>
    <legend class="text-center">Where does it live?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="forest" value="forest" name="animal[habitat]" autocomplete="off" />
          <label for="forest">In the forest</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="beach" value="beach" name="animal[habitat]" autocomplete="off" />
          <label for="beach">By the seaside</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="water" value="water" name="animal[habitat]" autocomplete="off" />
          <label for="water">In the water</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="air" value="air" name="animal[habitat]" autocomplete="off" />
          <label for="air">In the sky</label>
        </div>
      </div>

  </fieldset>

  <fieldset>
    <legend class="text-center">What does it do?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="fly" value="fly" name="animal[behaviour]" autocomplete="off" />
          <label for="fly">Fly</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="run" value="run" name="animal[behaviour]" autocomplete="off" />
          <label for="run">Run or crawl</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="slither" value="slither" name="animal[behaviour]" autocomplete="off" />
          <label for="slither">Slither</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="swim" value="swim" name="animal[behaviour]" autocomplete="off" />
          <label for="swim">Swim</label>
        </div>
      </div>
  </fieldset>

  <fieldset>
    <legend class="text-center">What colour is it?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="brown" value="brown" name="animal[colour]" autocomplete="off" />
          <label for="brown">Brown</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="green" value="green" name="animal[colour]" autocomplete="off" />
          <label for="green">Green</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="white" value="white" name="animal[colour]" autocomplete="off" />
          <label for="white">White</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="red" value="red" name="animal[colour]" autocomplete="off" />
          <label for="red">Red</label>
        </div>
      </div>
  </fieldset>

  <fieldset>
    <legend class="text-center">What kind of tail does it have?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="none" value="none" name="animal[tail]" autocomplete="off" />
          <label for="none">None</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="pointy" value="pointy" name="animal[tail]" autocomplete="off" />
          <label for="pointy">Pointy</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="bushy" value="bushy" name="animal[tail]" autocomplete="off" />
          <label for="bushy">Bushy</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="scaly" value="scaly" name="animal[tail]" autocomplete="off" />
          <label for="scaly">Scaly</label>
        </div>
      </div>
  </fieldset>

  <fieldset>
    <legend class="text-center">What kind of legs does it have?</legend>
      <div class="match-form-radios row">
        <div class="col py-2">
          <input type="radio" id="none" value="none" name="animal[legs]" autocomplete="off" />
          <label for="none">None</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="short" value="short" name="animal[legs]" autocomplete="off" />
          <label for="short">Short</label>
        </div>
        <div class="w-100"></div>
        <div class="col py-2">
          <input type="radio" id="long" value="long" name="animal[legs]" autocomplete="off" />
          <label for="long">Long</label>
        </div>
        <div class="col py-2">
          <input type="radio" id="lots" value="lots" name="animal[legs]" autocomplete="off" />
          <label for="lots">Lots of leg</label>
        </div>
      </div>
  </fieldset>
  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-highlight">Search</button>
  </div>
</form>
