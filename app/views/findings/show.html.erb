<div class="container">

  <div class="card-vertical">
    <%= image_tag @finding.picture, crop: :fill, class: "card-animal img" %>
    <div class="card-vertical-infos">
      <div class="card-vertical-description">
        <p>You found this animal on <strong><%= @finding.date %></strong></p>
        <p>This animal was found at <strong><%= @finding.address %></strong></p>
        <p><%= @finding.comment %></p>
      </div>
      <%= link_to "Edit finding", animals_path, class: "btn btn-highlight" %>
      <%= link_to "Delete finding", animals_path, class: "btn btn-ghost" %>
    </div>
  </div>

  <div class="card-vertical">
    <%= cl_image_tag @finding.animal.photo.key, crop: :fill, class: "card-animal img" %>
    <div class="card-vertical-infos">
      <div class="card-vertical-description">
        <h2><%= @finding.animal.name %></h2>
        <p><%= @finding.animal.details %></p>
      </div>
    </div>
  </div>

  <div>
  <%= link_to "Back to all findings", findings_path, class: "btn btn-ghost" %>
  </div>
</div>

