<div class="banner" style="background-image: url(<%= asset_path "wallpaperflare.com_wallpaper.jpg"%>)">

<div class="top_container">
  <div>
    <%= link_to "/" do %>
      <%= image_tag "Pocket-Zoo-1.png" %>
    <% end %>
  </div>
  <div>
    <%= link_to "/" do %>
      <%= image_tag "sun.png" %>
    <% end %>
  </div>
</div>
<div class="h1_container">
  <h1 class="text-center">Start Exploring !</h1>
</div>

<div class="search_container">

  <form action="/animals">
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="direct[query]" id="search_query" placeholder="sexy sheep                       Search" >
    </div>
    <div class="lens">
     <button name="button" type="submit" class="btn btn-flat one">
      <%# <i class="fas fa-search"></i> %>
      </button>
      </div>
  </form>
</div>

<div class= "bottom_container">
  <div>
    <%= link_to findings_path do %>
      <% if current_user%>
        <%= image_tag current_user.avatar%>
       <% else %>
        <%= image_tag("too_slow.jpg") %>
       <% end %>
      <% end %>
   </div>
   <div>
    <%= link_to match_path do %>
      <%= image_tag "plus.png" %>
    <% end %>
   </div>

</div>
