
<div class="cards">
  <% @users.each do |user| %>
      <div class="card-horizontal">
        <%= image_tag user.avatar, class: "card-horizontal img" %>
        <div class="card-horizontal-infos">
          <h2><%= user.username %></h2>
          <div>
          <%= link_to "Friend", {:action => :create, :controller => :friendships}, :method => :post, class: "btn btn-nav" %>
          <%= link_to "Unfriend", friendships_path, class: 'btn btn-nav', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
          </div>
        </div>
      </div>
  <% end %>
</div>
