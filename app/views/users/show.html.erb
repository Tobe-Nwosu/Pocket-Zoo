<div class="cards">
      <div class="card-horizontal">
        <%= image_tag @user.avatar, class: "card-horizontal img" %>
        <div class="card-horizontal-infos">
          <h2><%= @user.username %></h2>
          <div>
          <% if @friendship %>
            <%= link_to "Unfriend", friendship_path(@friendship), class: 'btn btn-nav', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
          <% else %>
            <%= link_to "Friend", user_friendships_path(@user) , data: {turbo_method: :post}, class: "btn btn-nav" %>
          <% end %>
          </div>
        </div>
      </div>
</div>
